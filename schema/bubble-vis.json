{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/monash-stu/Tourism-Visualisation/main/data/expenditure-per-region.csv",
        "format": {"type": "csv"}
    },
    "mark": {"type": "circle", "opacity": 0.7, "stroke": "black", "strokeWidth": 1},
    "encoding": {
        "x": {
            "field": "State",
            "type": "nominal",
            "title": "State",
            "axis": {"labelAngle": 0}
        },
        "y": {
            "field": "Expenditures",
            "type": "quantitative",
            "title": "Total Expenditures (in thousands)",
            "scale": {"zero": true}
        },
        "size": {
            "field": "Visitors",
            "type": "quantitative",
            "title": "Number of Visitors",
            "scale": {"range": [100, 1000]}
        },
        "color": {
            "field": "State",
            "type": "nominal",
            "legend": {"title": "State"},
            "scale": {"scheme": "category20"}
        },
        "tooltip": [
            {"field": "State", "type": "nominal", "title": "State"},
            {"field": "Visitors", "type": "quantitative", "title": "Number of Visitors"},
            {"field": "Expenditures", "type": "quantitative", "title": "Expenditures (in thousands)"}
        ]
    }
}
