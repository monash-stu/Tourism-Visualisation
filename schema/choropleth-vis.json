{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Visitors by State of Stay",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/monash-stu/Tourism-Visualisation/main/STE_2016_AUST.json",
    "format": { "type": "topojson", "feature": "STE_2016_AUST" }
  },
  "transform": [
    {
      "lookup": "properties.Region",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/monash-stu/Tourism-Visualisation/main/data/visitors-by-state-of-stay.csv"
        },
        "key": "Region",
        "fields": ["Arrivals"]
      }
    },
    { "calculate": "datum.Arrivals + 0.1", "as": "Visitor Count" }
  ],
  "mark": { "type": "geoshape" },
  "encoding": {
    "color": {
      "field": "Visitor Count",
      "type": "quantitative",
      "scale": { "type": "log" }
    },
    "tooltip": [
      { "field": "properties.Region", "type": "nominal", "title": "Region" },
      { "field": "Arrivals", "type": "quantitative", "title": "Arrivals" }
    ]
  }
}
  